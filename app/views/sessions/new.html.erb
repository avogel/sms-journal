<div class="well col-lg-6 col-lg-offset-3 login">
  <fieldset>
    <Legend><h2>Sign In</h2></Legend>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <label for="session_email" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="session_email" placeholder="Email" name= "session[email]">
        </div>
      </div>
      <br>
      <br>
      <div class="form-group">
        <label for="session_password" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-10">
          <input type="password" class="form-control" id="session_password" placeholder="Pasword" name= "session[password]">
        </div>
      </div>
      <br>
      <br>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary pull-right" %>
    </fieldset>
  <% end %>

  <p class="pull-right">New user? <%= link_to "Sign up now!", sign_up_url %></p>
  </div>
</div>